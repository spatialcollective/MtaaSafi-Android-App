<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.sc.mtaa_safi.feed.MainActivity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="80dp"
    android:id="@+id/feed_item"
    android:orientation="horizontal"
    android:background="@drawable/border" >

    <ImageView android:id="@+id/leadImage"
        android:layout_height="76dp"
        android:layout_width="76dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="1dp"

        android:scaleType="centerCrop" />

    <include android:id="@+id/voteInterface"
        layout="@layout/vote_interface"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxHeight="48dp"
        android:layout_gravity="center_vertical"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"/>

    <LinearLayout android:id="@+id/detailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        android:layout_toEndOf="@id/leadImage"
        android:layout_toStartOf="@id/voteInterface"
        android:layout_toRightOf="@id/leadImage"
        android:layout_toLeftOf="@id/voteInterface"
        android:minHeight="56dp" >

        <TextView android:id="@+id/itemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Report description"
            android:textColor="@color/light_black"
            android:textSize="16sp" />

        <TextView android:id="@+id/itemLocation"
              android:text="Near Nowhereville"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingBottom="8dp"
              android:textSize="14sp"
              android:textColor="@color/DarkGray" />
    </LinearLayout>



</RelativeLayout>
