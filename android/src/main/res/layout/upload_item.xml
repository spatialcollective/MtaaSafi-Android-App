<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/upload_row"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:background="@drawable/border">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <TextView android:id="@+id/uploadingContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A married philosopher is the stuff of comedy!"
            android:textSize="16sp"
            android:textColor="@color/textDarkGray"
            android:paddingRight="8dp"
            android:paddingEnd="8dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/uploadingTime"
            android:layout_toStartOf="@+id/uploadingTime"/>

        <TextView android:id="@+id/uploadingTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="3.14 hours ago"
            android:textColor="@color/textDarkGray"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/round_pic_row"/>

        <Button android:id="@+id/deleteReportButton"
            android:text="@string/delete"
            android:layout_height="36dp"
            android:layout_width="wrap_content"
            android:minWidth="88dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/Coral"
            android:gravity="end|center_vertical"
            android:background="@color/transparent" />
    </RelativeLayout>

</LinearLayout>
