<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/new_report"
    android:tag="new_report"
    android:elevation="0dp">

    <android.support.v7.widget.Toolbar android:id="@+id/new_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?android:attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="@color/mtaa_safi_blue" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_toolbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/top_layout">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <com.sc.mtaa_safi.newReport.SafiEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/newReportDetails"
                android:hint="@string/report_detail_hint"
                android:background="@drawable/safi_text_background"
                android:inputType="textMultiLine"
                android:maxLength ="2000"
                android:imeOptions="actionDone"
                android:textSize="24sp"
                android:textColorHighlight="@color/Coral"
                android:paddingTop="12dp"
                android:paddingBottom="16dp"/>

            <AutoCompleteTextView android:id="@+id/enterWard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="28dp"
                android:paddingBottom="16dp"
                android:textSize="20sp"
                android:completionThreshold="1"
                android:background="@drawable/safi_text_background"
                android:hint="@string/get_area"
                android:singleLine="true"
                android:imeOptions="actionDone" />

            <LinearLayout android:id="@+id/landmarkLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:visibility="invisible">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textSize="16sp"
                    android:text="@string/get_landmark" />

                <Spinner android:id="@+id/landmarkSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="18dp"
                    android:paddingBottom="28dp" />
            </LinearLayout>

            <include layout="@layout/attach_pic_row"
                android:id="@+id/include"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:minHeight="50dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="right"
                android:id="@+id/button_layout"
                android:elevation="0dp" >

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:minWidth="88dp"
                    android:text="@string/save"
                    android:id="@+id/saveButton"
                    android:background="@drawable/secondary_button"
                    android:textColor="@color/disableable_button"
                    android:onClick="attemptSave"
                    android:translationZ="0dp"
                    android:enabled="false"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="16dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:minWidth="88dp"
                    android:text="@string/report_button_text"
                    android:id="@+id/sendButton"
                    android:background="@drawable/primary_button"
                    android:textColor="@color/White"
                    android:onClick="attemptBeamOut"
                    android:translationZ="0dp"
                    android:enabled="false"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="4dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>

