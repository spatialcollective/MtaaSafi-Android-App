<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_gradient"
    android:id="@+id/report_detail_bottomView"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Report content Report content Report content Report content Report content "
        android:id="@+id/reportContent"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/vote_interface"
        android:paddingTop="4dp"
        android:textColor="@color/white" />

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/vote_interface"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/vote_interface"
        android:layout_marginRight="3dp" />
    <include layout="@layout/location_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/vote_interface"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/location_bar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:id="@+id/username"
        android:layout_alignBottom="@+id/vote_interface"
        android:layout_toRightOf="@+id/vote_interface"
        android:textColor="@color/White" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="timestamp"
        android:id="@+id/timestamp"
        android:paddingRight="10dp"
        android:textColor="@color/White"
        android:layout_alignBottom="@+id/vote_interface"
        android:layout_alignRight="@+id/location_bar"
        android:layout_alignEnd="@+id/location_bar" />
</RelativeLayout>