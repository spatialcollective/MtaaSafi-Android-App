<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/White">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/button_new_report"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To Create a New Report"
        android:id="@+id/toSendText"
        android:textColor="@color/mtaa_safi_blue"
        android:textSize="20dp"
        android:textStyle="bold"
        android:padding="8dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toSendText"
        android:id="@+id/linearLayout"
        android:paddingBottom="8dp">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:id="@+id/onboardingDescribe"
                android:src="@drawable/onboarding_graphic_describe" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Describe the problem"
                android:id="@+id/describeIt"
                android:layout_below="@+id/onboardingDescribe"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:id="@+id/onboardingPhotograph"
                android:src="@drawable/onboarding_graphic_photo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Take 1-3 photos of it"
                android:id="@+id/photographIt"
                android:layout_below="@id/onboardingPhotograph"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:id="@+id/onboardingSend"
                android:src="@drawable/onboarding_graphic_send" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send it!"
                android:id="@+id/sendIt"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/onboardingSend"
                />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You can also save reports to send later"
        android:id="@+id/textView4"
        android:textColor="@color/mtaa_safi_blue"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:paddingTop="8dp" />

</RelativeLayout>