<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/White">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:paddingEnd="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        android:layout_marginBottom="8dp"
        android:background="@color/ultraLightGrey" >

        <TextView android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Spatial Collective"
            android:textSize="14sp"
            android:textColor="@color/Black"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView android:id="@+id/user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="spatial@collective.com"
            android:textSize="14sp"
            android:textColor="@color/Black"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <include android:id="@+id/report_count"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            layout="@layout/report_count"
            android:visibility="invisible" />
    </RelativeLayout>

    <ListView android:id="@+id/nav_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:divider="@color/transparent"
        android:choiceMode="singleChoice" />

    <View android:id="@+id/top_border"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:paddingTop="8dp"
          android:background="@color/ultraLightGrey"
          android:visibility="invisible"/>
    
    <TextView android:id="@+id/places_toggle"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingLeft="16dp"
        android:paddingEnd="16dp"
        android:paddingRight="16dp"
        android:gravity="center_vertical"
        android:textSize="14sp"
        android:textColor="@color/textDark"
        android:text="@string/places"
        android:drawablePadding="32dp"
        android:drawableStart="@drawable/ic_map_grey"
        android:drawableLeft="@drawable/ic_map_grey"
        android:drawableRight="@drawable/ic_expand_more_grey"
        android:drawableEnd="@drawable/ic_expand_more_grey" />

    <ListView android:id="@+id/places_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:divider="@color/transparent"
        android:choiceMode="singleChoice"
        android:visibility="gone" />

    <View android:id="@+id/bottom_border"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:paddingTop="8dp"
          android:paddingBottom="8dp"
          android:background="@color/ultraLightGrey"/>

    <TextView android:id="@+id/settings_btn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingLeft="16dp"
        android:paddingEnd="16dp"
        android:paddingRight="16dp"
        android:text="@string/settings"
        android:textColor="@color/textDark"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/ic_settings"
        android:drawablePadding="32dp"/>

</LinearLayout>