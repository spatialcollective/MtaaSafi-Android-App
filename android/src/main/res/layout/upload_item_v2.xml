<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/upload_row"
    android:background="@color/White"
    android:weightSum="1"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A married philosopher is the stuff of comedy!"
        android:id="@+id/uploadingContent"
        android:textColor="@color/LightGrey"
        android:paddingBottom="10dp" />

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/uploading_pic_row"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3.14 hours ago"
        android:id="@+id/uploadingTime"
        android:textColor="@color/LightGrey"
        android:paddingTop="8dp" />

    <ImageButton
        android:id="@+id/deleteReportButton"
        android:src="@drawable/delete_report_button"
        android:layout_width="38dp"
        android:layout_height="26dp"
        android:layout_gravity="right"
        android:scaleType="fitCenter"
        android:background="@color/transparent"
        android:layout_weight="0.03" />

</LinearLayout>
