<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/top_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

        <android.support.v7.widget.Toolbar android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?android:attr/actionBarSize"
            android:theme="@android:style/ThemeOverlay.Material.Dark.ActionBar"
            android:background="?android:attr/colorPrimary" >

            <LinearLayout android:id="@+id/toolbar_layout"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView android:id="@+id/r_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="56dp"
                    android:text="Report Title that is super long becasue we have no idea wtf people may write, it could be really long run-ons"
                    android:gravity="center_vertical"
                    android:textColor="@color/white"
                    android:textSize="28sp"
                    android:paddingRight="20dp"
                    android:paddingTop="4dp"/>

                <TextView android:id="@+id/itemLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="In a galaxy far far away..."
                    android:textSize="20sp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:textColor="@color/white" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:paddingRight="96dp">

                    <TextView android:id="@+id/r_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User Name"
                        android:textColor="@color/LightGrey"
                        android:textSize="18sp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />
                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Â·"
                        android:textColor="@color/LightGrey"
                        android:textSize="18sp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"/>

                    <TextView android:id="@+id/r_timestamp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A long time ago"
                        android:textSize="18sp"
                        android:textColor="@color/LightGrey" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.Toolbar>

        <ImageView android:id="@+id/leadImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_below="@id/toolbar"
            android:src="@drawable/sample_image"/>

        <include android:id="@+id/topVote"
            layout="@layout/vote_interface_floating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/toolbar"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="-28dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"/>

        <include layout="@layout/comments_interface"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_below="@id/leadImage" />

        <include android:id="@+id/new_comment_standalone"
                 layout="@layout/new_comment_standalone"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_below="@id/leadImage"
                 android:layout_marginLeft="72dp"
                 android:layout_marginStart="72dp"
                 android:layout_marginRight="16dp"
                 android:layout_marginEnd="16dp" />
</RelativeLayout>