<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/White">
    <android.support.v4.view.ViewPager
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mtaa_safi_blue"
        android:id="@+id/launchScreen">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logo"
            android:src="@drawable/logo_v3"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thank you for joining the Mtaa Safi movement!"
            android:id="@+id/textView"
            android:gravity="center_horizontal"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/logo"
            android:layout_margin="16dp"
            android:textColor="@color/White"
            android:textSize="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap screen to continue"
            android:id="@+id/tapScreenTV"
            android:textColor="@color/White"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="96dp"
            android:visibility="invisible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Together we can make a better"
            android:id="@+id/textView3"
            android:gravity="center_horizontal"
            android:textColor="@color/White"
            android:textSize="24dp"
            android:layout_below="@+id/textView"
            android:layout_alignRight="@+id/textView"
            android:layout_alignEnd="@+id/textView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mathare"
            android:id="@+id/villageNames"
            android:gravity="center_horizontal"
            android:textColor="@color/White"
            android:textSize="24dp"
            android:layout_below="@+id/textView3"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="232dp"
        android:layout_height="80dp"
        android:id="@+id/bookMarkBar"
        android:background="@drawable/bookmark_bar_first"
        android:baselineAligned="false"
        android:measureWithLargestChild="false"
        android:paddingTop="16dp"
        android:paddingLeft="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/feedBookmark"
            android:src="@drawable/bookmark_feed_hl"
            android:scaleType="fitCenter"
            android:background="@color/transparent"
            android:layout_gravity="center_horizontal"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/newReportBookmark"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/newReportBookmark"
            android:src="@drawable/bookmark_newreport_hl"
            android:scaleType="fitCenter"
            android:background="@color/transparent"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/doneBookmark"
            android:src="@drawable/bookmark_done_hl"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"
            android:background="@color/transparent"
            android:layout_alignTop="@+id/feedBookmark"
            android:layout_toRightOf="@+id/newReportBookmark" />

    </RelativeLayout>

</RelativeLayout>