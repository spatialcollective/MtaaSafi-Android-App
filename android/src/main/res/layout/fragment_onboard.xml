<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/White">
    <android.support.v4.view.ViewPager
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/viewPager"/>
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="232dp"
        android:layout_height="80dp"
        android:id="@+id/bookMarkBar"
        android:background="@drawable/bookmark_bar_first"
        android:baselineAligned="false"
        android:measureWithLargestChild="false"
        android:paddingTop="16dp"
        android:paddingLeft="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/feedBookmark"
            android:src="@drawable/bookmark_feed_hl"
            android:scaleType="fitCenter"
            android:background="@color/transparent"
            android:layout_gravity="center_horizontal"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/newReportBookmark"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/newReportBookmark"
            android:src="@drawable/bookmark_newreport_hl"
            android:scaleType="fitCenter"
            android:background="@color/transparent"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/doneBookmark"
            android:src="@drawable/bookmark_done_hl"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"
            android:background="@color/transparent"
            android:layout_alignTop="@+id/feedBookmark"
            android:layout_toRightOf="@+id/newReportBookmark" />

    </RelativeLayout>

</RelativeLayout>