<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/White"
    android:id="@+id/onboarding_feed">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/feed"
        android:background="@color/White">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:id="@+id/feedItem1"
            android:weightSum="1">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:id="@+id/voteAndText">

                <include
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    layout="@layout/vote_interface"
                    android:id="@+id/voteInterface1" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayout2"
                    android:layout_toRightOf="@+id/voteInterface"
                    android:layout_alignParentStart="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="The Mtaa Safi feed is like your Facebook feed..."
                        android:id="@+id/itemTitle"
                        android:layout_alignParentTop="true"
                        android:textColor="#666666"
                        android:textSize="25dp"
                        android:paddingLeft="8dp" />

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/voteAndText"
                android:id="@+id/location">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Near Ngong Hills Hotel and The Agenda"
                    android:id="@+id/itemLocation"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:textSize="14dp"
                    android:paddingTop="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:paddingBottom="7dp"
                    android:textColor="@color/DarkGray" />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="18dp"
                    android:id="@+id/markerIcon"
                    android:src="@drawable/marker"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5km"
                    android:id="@+id/itemDistance"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textSize="14dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/DarkGray"
                    android:layout_toRightOf="@+id/markerIcon"
                    android:layout_gravity="right"
                    android:paddingBottom="7dp" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/bottomLine"
                android:background="#999999"
                android:paddingTop="10dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/location"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:id="@+id/feedItem2"
            android:weightSum="1"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_gravity="right"
            android:visibility="invisible">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:id="@+id/linearLayout3" >

                <include
                    layout="@layout/vote_interface"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/voteInterface2" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayout"
                    android:layout_toRightOf="@+id/voteInterface"
                    android:layout_alignParentStart="true" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Except with reports of nearby issues."
                        android:id="@+id/textView2"
                        android:layout_alignParentTop="true"
                        android:textColor="#666666"
                        android:textSize="25dp"
                        android:paddingLeft="8dp" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout3"
                android:id="@+id/relativeLayout" >

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="18dp"
                    android:id="@+id/doneButton"
                    android:src="@drawable/marker"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Near Ngong Hills Hotel and The Agenda"
                    android:id="@+id/textView3"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:textSize="14dp"
                    android:paddingTop="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:paddingBottom="7dp"
                    android:textColor="@color/DarkGray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1km"
                    android:id="@+id/textView4"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textSize="14dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/DarkGray"
                    android:layout_toRightOf="@+id/doneButton"
                    android:layout_gravity="right"
                    android:paddingBottom="7dp" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/imageView2"
                android:background="#999999"
                android:paddingTop="10dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/relativeLayout" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:id="@+id/feedItem3"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:weightSum="1"
            android:visibility="invisible">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants"
                android:id="@+id/linearLayout5" >

                <include
                    layout="@layout/vote_interface"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/voteInterface3" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayout4"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:layout_toRightOf="@+id/voteInterface"
                    android:layout_alignParentStart="true" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Press the triangle to vote on a report."
                        android:id="@+id/textView5"
                        android:layout_alignParentTop="true"
                        android:textColor="#666666"
                        android:textSize="25dp"
                        android:paddingLeft="8dp" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout5"
                android:id="@+id/relativeLayout3" >

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="18dp"
                    android:id="@+id/imageView3"
                    android:src="@drawable/marker"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Near Ngong Hills Hotel and The Agenda"
                    android:id="@+id/textView6"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:textSize="14dp"
                    android:paddingTop="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:paddingBottom="7dp"
                    android:textColor="@color/DarkGray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200m"
                    android:id="@+id/textView7"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textSize="14dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/DarkGray"
                    android:layout_toRightOf="@+id/imageView3"
                    android:layout_gravity="right"
                    android:paddingBottom="7dp" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/imageView4"
                android:background="#999999"
                android:paddingTop="10dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/relativeLayout3" />
        </RelativeLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mtaa_safi_blue"
        android:id="@+id/launchScreen">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logo"
            android:src="@drawable/logo_v3"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thank you for joining the Mtaa Safi movement!"
            android:id="@+id/thankyouTV"
            android:gravity="center_horizontal"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/logo"
            android:layout_margin="16dp"
            android:textColor="@color/White"
            android:textSize="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap screen to continue"
            android:id="@+id/tapScreenTV"
            android:textColor="@color/White"
            android:layout_below="@+id/thankyouTV"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="96dp"
            android:visibility="invisible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Together we can make a better"
            android:id="@+id/togetherWeCan"
            android:gravity="center_horizontal"
            android:textColor="@color/White"
            android:textSize="24dp"
            android:layout_below="@+id/thankyouTV"
            android:layout_alignRight="@+id/thankyouTV"
            android:layout_alignEnd="@+id/thankyouTV" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mathare"
            android:id="@+id/villageNames"
            android:gravity="center_horizontal"
            android:textColor="@color/White"
            android:textSize="24dp"
            android:layout_below="@+id/togetherWeCan"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</RelativeLayout>