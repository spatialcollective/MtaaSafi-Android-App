<?xml version="1.0" encoding="utf-8"?>

<com.sc.mtaasafi.android.feed.AddCommentBar xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:id="@+id/add_comment_bar"
    android:paddingRight="8dp">
<com.sc.mtaasafi.android.newReport.SafiEditText
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:hint="Comment..."
    style="@style/SafiEditTextStyle"
    android:layout_weight="1"
    android:id="@+id/commentEditText"/>

    <ImageButton
        android:layout_width="54dp"
        android:layout_height="52dp"
        android:id="@+id/sendComment"
        android:layout_gravity="right"
        android:src="@drawable/add_comment_button"
        android:scaleType="fitCenter"
        android:background="@color/transparent"
        android:layout_weight="0"
        android:clickable="false" />
</com.sc.mtaasafi.android.feed.AddCommentBar>