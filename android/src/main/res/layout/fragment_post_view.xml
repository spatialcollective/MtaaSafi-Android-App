<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/reportDetailView"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Name"
        android:id="@+id/reportViewUsername"
        android:textColor="#666666"
        android:paddingLeft="10dp"
        android:textSize="14dp"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:layout_below="@+id/reportViewTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I just saw the one of the craziest things the other day! A man was juggling chainsaws."
        android:id="@+id/reportViewDetails"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:textSize="18dp"
        android:paddingBottom="15dp"
        android:layout_below="@+id/reportViewUsername"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5h"
        android:id="@+id/reportViewTimeStamp"
        android:paddingLeft="10dp"
        android:textSize="14dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/picAttachedIcon"
        android:src="@drawable/pic_attached"
        android:padding="0dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/reportViewTimeElapsed"
        android:layout_alignBottom="@+id/reportViewTimeElapsed" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/attachedPic"
        android:src="@drawable/pic_placeholder"
        android:layout_below="@+id/reportViewDetails"
        android:layout_centerHorizontal="true" />
    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_alignEnd="@+id/attachedPic"
        android:layout_below="@+id/attachedPic"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Report Title"
        android:id="@+id/reportViewTitle"
        android:textSize="30dp"
        android:paddingLeft="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
