<resources>

    <style name="AppTheme" parent="@style/Theme.AppCompat.Light">
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#009999</item>
        <!-- Support library compatibility -->
    </style>

    <style name="SafiEditTextStyle" parent="android:Widget.EditText">
        <item name="android:background">@drawable/add_comment_background</item>
    </style>
    <!-- Send Button styles -->

    <style name="sendCommentPressed">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/Coral</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="sendCommentEnabled">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/Coral</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="sendCommentDisabled">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/LightCoral</item>
    </style>


</resources>
