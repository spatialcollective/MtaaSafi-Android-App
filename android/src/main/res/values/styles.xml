<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

<style name="AppTheme" parent="@style/Theme.AppCompat.Light">
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background"  tools:ignore="NewApi">@color/mtaa_safi_blue</item>
        <item name="background">@color/mtaa_safi_blue</item>
        <item name="android:textColor">@color/White</item>
    </style>

    <style name="CustomActionBarTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarStyle"   tools:ignore="NewApi">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="SafiEditTextStyle" parent="android:Widget.EditText">
        <item name="android:background">@drawable/add_comment_background</item>
    </style>
    <!-- Send Button styles -->

    <style name="sendCommentPressed">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/Coral</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="sendCommentEnabled">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/Coral</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="sendCommentDisabled">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/LightCoral</item>
    </style>

</resources>
