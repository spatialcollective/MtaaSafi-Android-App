<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

<style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:spinnerDropDownItemStyle">@style/MyActionBarDropDown</item>
        <item name="colorPrimary">@color/mtaa_safi_blue</item>
        <item name="colorPrimaryDark">@color/mtaa_safi_blue_dark</item>
        <item name="colorAccent">@color/Coral</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:textColorPrimary">@color/White</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textColorSecondary">@color/White</item>
        <item name="colorControlNormal">@color/White</item>
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>
        <item name="colorControlHighlight">@color/Coral</item>

        <item name="android:background">@drawable/app_color</item>
        <!--<item name="android:displayOptions">homeAsUp</item>-->
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="android:colorButtonNormal">@color/White</item>

        <!-- Support library compatibility -->
        <item name="background">@drawable/app_color</item>
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="colorButtonNormal">@color/White</item>
    </style>

    <style name="MyActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/White</item>
    </style>

    <style name="MyActionBarDropDown" parent="@style/Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:textAppearance">@style/MyActionBarDropDownText</item>
        <item name="background">@color/mtaa_safi_blue</item>
    </style>
    <style name="MyActionBarDropDownText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/White</item>
        <item name="background">@color/mtaa_safi_blue</item>
    </style>

    <style name="ButtonText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MySpinner" parent="Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">@color/mtaa_safi_blue</item>
        <item name="android:popupBackground">@color/mtaa_safi_blue_dark</item>
        <item name="android:dropDownSelector">?android:selectableItemBackground</item>
        <item name="android:divider">@null</item>
        <item name="android:overlapAnchor">true</item>
        <item name="elevation">2dp</item>
    </style>
</resources>
